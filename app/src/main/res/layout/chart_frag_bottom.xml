<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/line_index_tab_height">

    <android.support.design.widget.TabLayout
        android:id="@+id/cfb_index_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_index_tab_height"
        android:layout_weight="1"
        app:tabIndicatorColor="#3e64aa"
        app:tabMaxWidth="60dp"
        app:tabMode="scrollable"
        app:tabTextAppearance="@style/chart_bottom_tab_text_size"
        app:tabSelectedTextColor="#3e64aa"
        app:tabTextColor="#373737" />


</RelativeLayout>